{
  "name": "nu-lint",
  "displayName": "Nu-Lint",
  "description": "Helpful linter for the Nu scripting language",
  "version": "0.0.8",
  "publisher": "WillemVanhulle",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "keywords": [
    "nushell",
    "nu",
    "lint",
    "linter",
    "shell"
  ],
  "activationEvents": [
    "onLanguage:nu",
    "onLanguage:nushell",
    "workspaceContains:*.nu"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Nu-Lint",
      "properties": {
        "nu-lint.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable nu-lint"
        },
        "nu-lint.executablePath": {
          "type": "string",
          "default": "nu-lint",
          "description": "Path to the nu-lint executable"
        },
        "nu-lint.configPath": {
          "type": "string",
          "default": "",
          "description": "Path to custom nu-lint configuration file (.nu-lint.toml)"
        },
        "nu-lint.lintOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Run nu-lint when file is saved"
        },
        "nu-lint.lintOnOpen": {
          "type": "boolean",
          "default": true,
          "description": "Run nu-lint when file is opened"
        },
        "nu-lint.lintOnType": {
          "type": "boolean",
          "default": false,
          "description": "Run nu-lint as you type (may impact performance)"
        }
      }
    },
    "commands": [
      {
        "command": "nu-lint.lintFile",
        "title": "Lint Current File",
        "category": "Nu-Lint"
      },
      {
        "command": "nu-lint.lintWorkspace",
        "title": "Lint Workspace",
        "category": "Nu-Lint"
      },
      {
        "command": "nu-lint.showLogs",
        "title": "Show Logs",
        "category": "Nu-Lint"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "test-offsets": "node tests/offset-validation.js",
    "test-workspace": "node tests/workspace-root-test.js"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/vsce": "^3.7.0",
    "eslint": "^8.0.0",
    "typescript": "^4.9.4"
  },
  "extensionDependencies": [
    "TheNuProjectContributors.vscode-nushell-lang"
  ],
  "extensionPack": [
    "constneo.vscode-nushell-format"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wvhulle/nu-lint-vscode.git"
  },
  "icon": "icon.png",
  "license": "MIT"
}