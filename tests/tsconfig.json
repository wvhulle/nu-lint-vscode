{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "../out/tests",
        "lib": [
            "ES2020"
        ],
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "mocha",
            "node"
        ]
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "../node_modules",
        "../.vscode-test",
        "../out"
    ]
}