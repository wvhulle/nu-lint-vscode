{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "pnpm: build",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "run",
        "build"
      ],
      "group": "build",
      "presentation": {
        "panel": "dedicated",
        "reveal": "never"
      },
      "problemMatcher": []
    },
    {
      "label": "pnpm: watch",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "run",
        "watch"
      ],
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "panel": "dedicated",
        "reveal": "never"
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^✘.+$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\[watch\\]",
          "endsPattern": "^⚡"
        }
      }
    }
  ]
}